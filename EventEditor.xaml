<Page x:Class="FusionX_Editor.EventEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FusionX_Editor"
      xmlns:customControls="clr-namespace:FusionX_Editor.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Event Editor">

    <Grid>
        <customControls:EventEditorHeader x:Name="Header" DockPanel.Dock="Top" VerticalAlignment="Top"></customControls:EventEditorHeader>
        
        <ScrollViewer>
            
            <StackPanel>
                    
                    <Separator Background="Transparent" Height="26"></Separator>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Name="EventGroups">
                            <customControls:EventGroupControl></customControls:EventGroupControl>

                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </ScrollViewer> 
    </Grid>
</Page>
