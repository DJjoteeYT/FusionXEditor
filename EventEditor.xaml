<Page x:Class="FusionX_Editor.EventEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FusionX_Editor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Event Editor">

    <Grid>
        <TextBlock x:Name="Bg" HorizontalAlignment="Center" TextWrapping="Wrap" Background="Gray" Text="Event Editor" VerticalAlignment="Center" Height="450" Width="800"/>
        <Label x:Name="EventsShownLabel" Content="All the events" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="305" Background="White" BorderBrush="Black"/>
        <WrapPanel Margin="0,33,0,392" Grid.ColumnSpan="2">
            <Label x:Name="LineNumber" Content="1" HorizontalAlignment="Left" Height="24" Width="22" Background="White" BorderBrush="Black"/>
            <Label x:Name="Block" Content="ERROR" HorizontalAlignment="Left" Height="24" Width="283" Background="White" BorderBrush="Black"/>
            <Grid Width="495" HorizontalAlignment="Center" ShowGridLines="True" Background="White"/>
        </WrapPanel>
    </Grid>
</Page>
